---
import Layout from "@layouts/Layout.astro"
import Link from "@components/Link.astro"

const image = Math.floor(Math.random() * 4)
---

<Layout title="404">
  <section class="flex flex-col items-center gap-4">
    <header class="text-center">
      <h1>Error 404</h1>
      <h2>This URL does not exist</h2>
    </header>
    <picture>
      <source srcset={`/notfound/${image}.avif`} type="image/avif" />
      <source srcset={`/notfound/${image}.webp`} type="image/webp" />
      <img src="/notfound/0.jpg" alt="image of a sad cat :(" class="w-80" />
    </picture>
    <Link
      title="Go back to the homepage"
      href="/"
      sr="Go back to the homepage"
      variantLink="accent"
      extraClasses="text-center text-lg"
    >
      Back to the home page.
    </Link>
  </section>
</Layout>
